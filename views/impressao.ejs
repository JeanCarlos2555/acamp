<%- include("partials/head") %>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between">
                    <h5 class="fw-bolder mt-1 align-middle">Pulseiras</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Cod.</th>
                                    <th>Nome</th>
                                    <th>Tipo</th>
                                    <th>Valor</th>
                                    <th>Valor Pago</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%pulseiras.forEach(pulseira=>{%>
                                    <tr class="align-middle">
                                        <td>ibc-<%=pulseira.id%>
                                        </td>
                                        <td>
                                            <%=pulseira.nome%>
                                                <%=pulseira.sobrenome%>
                                        </td>
                                        <td>
                                            <%=(pulseira.isMeia)?'Meia':'Inteira'%>
                                        </td>
                                        <td>R$ <%=parseFloat(pulseira.valor_pulseira).toFixed(2)%>
                                        <td>R$ <%=parseFloat(pulseira.valor_pago).toFixed(2)%>
                                        </td>
                                        <td>
                                            <%=(pulseira.status)%>
                                        </td>
                                    </tr>
                                    <%})%>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Totais:</th>
                                    <th><%=pulseiras.length%> UND</th>
                                    <th></th>
                                    <th>R$ <%=parseFloat(pagamento.valor_pulseira).toFixed(2)%></th>
                                    <th>R$ <%=pagamento.char_paid / 100%></th>
                                </tr>
                                <tr>
                                    <th class="text-center" colspan="6">Pago dia: <%=pagamento.char_createdAt%> - <%=pagamento.char_payment_installments%>X de R$ <%=pagamento.valor_parcela%> - Metodo: <%=pagamento.char_payment_type%></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        window.onload = ()=>{
            window.print()
        }
    </script>
    <%- include("partials/end") %>