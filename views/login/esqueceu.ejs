
<%- include("../partials/header") %>
    <main>
        <section id="">
            <div class="container" data-aos="zoom-out">
                <div class="row justify-content-center my-5">
                    <div class="col-md-8">
                        <div class="card">
                            <form action="/login/esqueceu/" class="needs-validation" novalidate method="post">
                                <div class="card-header text-white bg-primary text-white py-3 text-center">
                                    <h3>Esqueceu a senha?</h3>
                                    <p>Enviaremos um código no seu e-mail para que você consiga alterar sua senha!</p>
                                </div>
                                <div class="card-body">
                                    
                                    <div class="row my-4 justify-content-center">
                                        <div class="col-lg-10 my-2">
                                          <label for="login" class="form-label">Informe seu E-mail *</label>
                                          <div class="input-group">
                                            <span class="input-group-text" id="addon-login"><i class="bi bi-envelope"></i></span>
                                            <input required type="email" value="<%=(email == undefined)?'':email%>" name="email" placeholder="Digite seu e-mail" id="email" class="form-control">
                                            <div class="invalid-feedback">
                                                Por gentileza informar e-mail.
                                            </div>
                                          </div>
                                        </div>
                                        <div class="col-lg-10 my-2">
                                            <a href="/login">Lembrou a senha?</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="row justify-content-center">
                                        <div class="col-8 my-2">
                                            <button type="submit" class="btn btn-primary form-control">Solicitar Código</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include("../partials/end.ejs") %>
